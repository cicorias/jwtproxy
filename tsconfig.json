{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "newLine": "LF",
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "baseUrl": "./src",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "typeAcquisition": {
    // "enable": true, 
    "exclude": [
      "dotenv"
    ]
  },
  "ts-node": {
    "pretty": true
  }
}